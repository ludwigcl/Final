<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:Nudgi="clr-namespace:Nudgi"
             x:Class="Nudgi.AddTaskPage"
             BackgroundColor="#00000000">
    <Grid BackgroundColor="#66000000" VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand">
        <Grid.GestureRecognizers>
            <TapGestureRecognizer Tapped="OnBackgroundTapped"/>
        </Grid.GestureRecognizers>

        <Frame CornerRadius="20"
               BackgroundColor="#001836"
               WidthRequest="300"
               HeightRequest="200"
               Padding="15"
               HorizontalOptions="Center"
               VerticalOptions="Center">
            <StackLayout>
                <Entry Placeholder="Task name" IsTextPredictionEnabled="True" Text="{Binding TaskName}" TextColor="#FE934D" BackgroundColor="#001836" FontFamily="Arial"/>
                <Entry Placeholder="Description" Text="{Binding TaskDescription}" TextColor="#FE934D" BackgroundColor="#001836" FontFamily="Arial"/>
                <Button Text="Add Task" IsEnabled="{Binding IsAddTaskEnabled}" Command="{Binding AddTaskCommand}" Margin="0,20,0,0" FontFamily="Arial"/>
            </StackLayout>
        </Frame>
    </Grid>
</ContentPage>